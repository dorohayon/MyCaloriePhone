<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.AddToDiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AddSportNameTitle"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/name" />


        <!-- Name field -->
        <TextView
            android:id="@+id/AddSportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="@string/edit_name"
            android:padding="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AddSportCaloriesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="@string/calories_burned" />
        <!-- Breed field -->
        <TextView
            android:id="@+id/AddSportCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="2"
            android:hint="@string/calories_burned"
            android:padding="16dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AddSportIntensityTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="@string/intensity" />

        <Spinner
            android:id="@+id/AddSportIntensity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="2" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AddSportTimeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="@string/time_minutes" />
        <!-- Breed field -->
        <EditText
            android:id="@+id/AddSportTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:hint="@string/number_of_minutes"
            android:inputType="number|textCapWords"
            android:padding="16dp"
            android:importantForAutofill="no" />


    </LinearLayout>


    <TextView
        android:id="@+id/enterDetailsSportTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/enterDetailsMessageEditAndAddSportActivity"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" tools:targetApi="jelly_bean" />





</LinearLayout>